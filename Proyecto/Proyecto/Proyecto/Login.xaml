        <Grid BackgroundColor="Black">

            <Image Source="logooo.png" Aspect="AspectFit"/>

            <Grid>
                <Frame BorderColor="Black" BackgroundColor="Transparent">
                    
                    <StackLayout Padding="15">

                        

                        <Label Text="Registrarse" TextColor="White" FontSize="45" HorizontalOptions="Center"/>
                    
                    
                
                
                <Label Text=""/>
                    <Label Text=""/>
                    
                    
                        <Label Text="Usuario" TextColor="Black" FontSize="25" HorizontalOptions="Center"/>
                <Frame BackgroundColor="Transparent" Padding="10" BorderColor="White" HasShadow="True" CornerRadius="30">
                        <Entry Placeholder="Ingrese Usuario" PlaceholderColor="White" />
                    </Frame>
                    <Label Text=""/>
                    <Label Text="Contraseña" TextColor="Black" FontSize="25" HorizontalOptions="Center"/>

