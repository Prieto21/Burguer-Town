                        <Entry Placeholder="Ingrese Contraseña" PlaceholderColor="White" IsPassword="True"/>
                    </Frame>
                    <Label Text=""/>
                    <Label Text=""/>
                <Label Text=""/>


                <Button Text="Entrar" BackgroundColor="Black" Padding="-200" VerticalOptions="End" HorizontalOptions="Center" TextColor="White" 
                            BorderColor="White" BorderWidth="1" CornerRadius="10" x:Name="btnMenu" Clicked="btnMenu_Clicked"/>
                
            </StackLayout>
            </Frame>
        </Grid>
        </Grid>
    </ContentPage.Content>
